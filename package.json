{
  "name": "@cevad-tokatli/slider-react",
  "version": "1.0.0",
  "license": "MIT",
  "main": "index.js",
  "description": "React version of Slider",
  "keywords": [
    "typescript",
    "javascript",
    "react",
    "slider",
    "image"
  ],
  "author": {
    "name": "Cevad Tokatli",
    "email": "cevadtokatli@hotmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cevadtokatli/slider-react"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "yarn clear && tsc --outDir lib && yarn copy",
    "clear": "rm -rf lib",
    "copy": "cp README.md lib/README.md && cp package.json lib/package.json && cp LICENSE lib/LICENSE",
    "dev": "tsc -w --outDir lib",
    "release": "yarn build && cd lib && yarn publish"
  },
  "devDependencies": {
    "@types/react": "18.0.19",
    "react": "18.2.0",
    "typescript": "4.8.3"
  },
  "dependencies": {
    "@cevad-tokatli/slider": "1.0.0"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  }
}
